<ol class="items-list effects-list item-effects">
  {{#each effects as |section sid|}}
    <li class="items-header flexrow" data-effect-type="{{section.type}}" data-parent-id="{{@root.actor.id}}" >
      <h3 class="item-name effect-name flexrow">{{localize section.label}}</h3>
      <div class="effect-source item-prop">{{localize "shinobiNoSho.Effect.Source"}}</div>
      <div class="effect-duration item-prop">{{localize "EFFECT.TabDuration"}}</div>
      <div class="item-controls effect-controls flexrow">
        <a class="effect-control" data-action="create" title="{{localize 'DOCUMENT.Create' type="Efeito"}}">
          <i class="fas fa-plus"></i>
        </a>
      </div>
    </li>

    <ol class="item-list flex-group-center">
    {{#each section.effects as |effect|}}
      <li class="item effect flexrow" data-effect-id="{{effect.id}}" data-parent-id="{{effect.parent.id}}">
        <div class="item-name effect-name flexrow">
          <img class="item-image" src="{{effect.icon}}"/>
          <h4 class="title">{{effect.name}}</h4>
        </div>
        <div class="effect-source item-prop">{{effect.sourceName}}</div>
        <div class="effect-duration item-prop">{{effect.duration.label}}</div>
        <div class="item-controls effect-controls flexrow">
          <a class="effect-control" data-action="toggle" title="{{localize 'shinobiNoSho.Effect.Toggle'}}">
            <i class="fas {{#if effect.disabled}}fa-check{{else}}fa-times{{/if}}"></i>
          </a>
          <a class="effect-control" data-action="edit" title="{{localize 'DOCUMENT.Update' type="Efeito"}}">
            <i class="fas fa-edit"></i>
          </a>
          <a class="effect-control" data-action="delete" title="{{localize 'DOCUMENT.Delete' type="Efeito"}}">
            <i class="fas fa-trash"></i>
          </a>
        </div>
      </li>
    {{/each}}
    </ol>
  {{/each}}
</ol>
