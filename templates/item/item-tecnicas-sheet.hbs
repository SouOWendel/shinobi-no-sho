					<div class="resource-content">
						<select name="" class="item-medium">
							<option>Ranking</option>
							<option>Ranking</option>
							<option>Ranking</option>
						</select>
					</div>
				</div>
			</div>

			<div class="flex flex-group-center">
				<div class="resource flex flex-2">
					<label for="system.details.nivelShinobi" class="resource-label p-r-10">Pré-requisito</label>
					<div class="resource-content">
						<input type="text" name="" value="" data-dtype="String"/>
					</div>
				</div>
			</div>

			<div class="flex">
				<div class="resource flex">
					<label for="system.details.nivelShinobi" class="resource-label p-r-10">Selos de Mão</label>
					<div class="resource-content">
						<input type="checkbox" name="" value="" data-dtype="String"/>
					</div>
				</div>
				<div class="resource flex">
					<label for="system.details.nivelShinobi" class="resource-label p-r-10">Escalona com Custo de Chakra</label>
					<div class="resource-content">
						<input type="checkbox" name="" value="" data-dtype="String"/>
					</div>
				</div>
			</div>
    </div>

		{{!-- Effects Tab --}}
    <div class="tab efeitos" data-group="primary" data-tab="efeitos">
      {{> "systems/shinobiNoSho/templates/item/parts/item-efeitos.hbs"}}
    </div>
  </section>
</form>
