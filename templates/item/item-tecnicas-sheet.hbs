{{!-- This template is a fallback for when items don't have more specific templates. --}}
{{!-- Generally, you'll want to make more specific templates when possible. --}}
<form id="tecnicas" class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="descricao">Descrição</a>
    <a class="item" data-tab="combate">Combate</a>
		<a class="item" data-tab="detalhes">Detalhes</a>
		<a class="item" data-tab="efeitos">Efeitos</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Description Tab --}}
    <div class="tab" data-group="primary" data-tab="descricao">
      {{editor system.description target="system.description" rollData=rollData button=true owner=owner editable=editable}}
    </div>

    {{!-- Combat Tab --}}
    <div class="tab combate" data-group="primary" data-tab="combate">
      <div class="flex flex-group-center">
				<div class="resource flex flex-2">
					<label for="system.details.nivelShinobi" class="resource-label p-r-10">Dano</label>
					<div class="resource-content">
						<select name="" class="item-medium">
							<option>Tipo de Técnica</option>
							<option>Tipo de Técnica</option>
							<option>Tipo de Técnica</option>
						</select>
					</div>
				</div>
				<div class="resource flex flex-2">
					<label for="system.details.nivelShinobi" class="resource-label p-r-10">Tipo de Dano</label>
					<div class="resource-content">
						<select name="" class="item-medium">
							<option>Subtipo de Técnica</option>
							<option>Subtipo de Técnica</option>
							<option>Subtipo de Técnica</option>
						</select>
					</div>
				</div>
			</div>

			<div class="flex flex-group-center">
				<div class="resource flex flex-2">
					<label for="system.details.nivelShinobi" class="resource-label p-r-10">Efeitos ou Aptidões</label>
					<div class="resource-content">
						<input type="text" name="" value="" data-dtype="String"/>
					</div>
				</div>
				<div class="resource flex flex-2">
					<label for="system.details.nivelShinobi" class="resource-label p-r-10">Duração</label>
					<div class="resource-content">
						<input type="text" name="" value="" data-dtype="String"/>
					</div>
				</div>
			</div>

			<div class="flex flex-group-center">
				<div class="resource flex flex-2">
					<label for="system.details.nivelShinobi" class="resource-label p-r-10">Área de Efeito</label>
					<div class="resource-content">
						<select name="" class="item-medium">
							<option>Área de Efeito</option>
							<option>Área de Efeito</option>
							<option>Área de Efeito</option>
						</select>
					</div>
				</div>
				<div class="resource flex flex-2">
					<i class="fas fa-arrow-right"></i>
					<div class="resource-content">
						<input type="text" name="" value="" data-dtype="String"/>
					</div>
				</div>
			</div>

			<div class="flex flex-group-center">
				<div class="resource flex flex-2">
					<label for="system.details.nivelShinobi" class="resource-label p-r-10">Alcance</label>
					<div class="resource-content">
						<select name="" class="item-medium">
							<option>Alcance</option>
							<option>Alcance</option>
							<option>Alcance</option>
						</select>
					</div>
				</div>
				<div class="resource flex flex-2">
					<i class="fas fa-arrow-right"></i>
					<div class="resource-content">
						<input type="text" name="" value="" data-dtype="String"/>
					</div>
				</div>
			</div>

			<div class="flex flex-group-center">
				<div class="resource flex flex-2">
					<label for="system.details.nivelShinobi" class="resource-label p-r-10">Ação</label>
					<div class="resource-content">
						<select name="" class="item-medium">
							<option>Ação</option>
							<option>Ação</option>
							<option>Ação</option>
						</select>
					</div>
				</div>
				<div class="resource flex flex-2">
