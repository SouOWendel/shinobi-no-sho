<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Técnicas'}}</div>
    <div class='item-small'>Origem</div>
		<div class='item-small'>Alcance</div>
		<div class='item-small'>Ação</div>
		<div class='item-small'>Duração</div>
    <div class='item-controls'>
      <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type='Técnica'}}' data-type='tecnicas'>
        <i class='fas fa-plus'></i>
      </a>
    </div>
  </li>
  {{#each tecnicas as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image flex-group-center'>
          <a class='rollable' data-roll-type='item'>
            <img src='{{item.img}}' title='{{item.name}}' width='24' height='24'/>
          </a>
        </div>
        <h4 data-tooltip="{{system.alternativo}}">{{item.name}}</h4>
      </div>
      <div class='item-small item-prop'>
				{{ifThen item.system.detalhes.origem 
				(localize (concat "shinobiNoSho.ITEMS.tecnicas.origem." item.system.detalhes.origem)) "—"}}
			</div>
			<div class='item-small item-prop'>
				{{ifThen item.system.combate.alcance.tipo 
				(localize (concat "shinobiNoSho.ITEMS.generico.alcance." item.system.combate.alcance.tipo)) "—"}}
			</div>
			<div class='item-small item-prop'>
				{{ifThen item.system.combate.acao 
				(localize (concat "shinobiNoSho.ITEMS.generico.acao." item.system.combate.acao)) "—"}}
			</div>
			<div class='item-small item-prop'>
				{{ifThen item.system.combate.duracao 
				(localize (concat "shinobiNoSho.ITEMS.tecnicas.duracao." item.system.combate.duracao)) "—"}}
			</div>
      <div class='item-controls'>
        <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type='Técnica'}}'>
          <i class='fas fa-edit'></i>
        </a>
        <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type='Técnica'}}'>
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
  {{/each}}
</ol>