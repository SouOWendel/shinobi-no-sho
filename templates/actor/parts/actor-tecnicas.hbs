<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Técnicas'}}</div>
    <div class='item-small'>Origem</div>
		<div class='item-medium'>Alcance</div>
		<div class='item-small'>Ação</div>
		<div class='item-large'>Duração</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='{{localize "DOCUMENT.Create" type='Técnica'}}'
        data-type='tecnicas'
      >
        <i class='fas fa-plus'></i>
      </a>
    </div>
  </li>
  {{#each tecnicas as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image flex-group-center'>
          <a class='rollable' data-roll-type='item'>
            <img
              src='{{item.img}}'
              title='{{item.name}}'
              width='24'
              height='24'
            />
          </a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div class='item-small item-prop'>Origem</div>
			<div class='item-medium item-prop'>Alcance</div>
			<div class='item-small item-prop'>Ação</div>
			<div class='item-large item-prop'>Duração</div>
      <div class='item-controls'>
        <a
          class='item-control item-edit'
          title='{{localize "DOCUMENT.Update" type='Técnica'}}'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-delete'
          title='{{localize "DOCUMENT.Delete" type='Técnica'}}'
        >
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
  {{/each}}
</ol>